/* views/take/take.wxss */
@import '/utils/css/style';

swiper {
  height:1050rpx;
  margin-top:30rpx;
}

swiper swiper-item{
  width:80% !important;
  float:left;
  margin-left:60rpx;
  padding-right:24px;
}

swiper swiper-item > view{
  -background: #F8F8F8;
  border:1px solid #F2F3F2;
}

.order-number{
  display: block;
  text-align: center;
  margin-top:40rpx;
  color:#B8B8B8;
}

.t-header{
  background: #F8F8F8;
  padding:10px;
  border-bottom: 1px solid #FDD2A1;
}

.t-header > image {
  width: 32px;
  height:32px;
  display: block;
  margin:0 auto;
}

.t-header text{
  font-size:12px;
}

.t-header view{
  float: right;
  margin-right:10px;
}

.t-header view image{
  width:14px;
  height:14px;
  position: relative;
  top:3px;
  left:5px;
}

.cabinet{
  border-bottom: 1px solid #FDD2A1;
  padding:10px;
}

.cab-title{
  display: flex;
}

.cab-title text{
  font-size:12px;
  color:#B6B6B6;
  flex: 1;
}

.cab-title text:nth-child(1){
  text-align: center;
}

.cab-info{
}

.cab-info text{
  font-size:24px;
  color:#F98D2C;
  float:left;
}

.cab-info text:nth-child(1){
  text-indent: 120rpx;
}

.cab-info text:nth-child(2){
  text-indent: 40rpx;
  font-size:40px;
  margin-top:-13px;
}

.cab-info text:nth-child(3){
  text-indent: 30rpx;
}

.order-code{
  font-size:20px;
  text-align: center;
  display: block;
}

.goods-info{
  background: #F8F8F8;
  padding:10px;
  margin-bottom: 10px;
}

.goods-info > image{
  width:200rpx;
  height: 200rpx;
  float: left;
  border-radius: 10px;
}

.goods-info .info{
  float: right;
  width:320rpx;
  height: 200rpx;
  position: relative;
}

.goods-info .info .title{
  font-size:13px;
  display: block;
}

.goods-info .info .desc{
  font-size:12px;
  display: block;
  color:#B0B0B0;
  line-height: 20px;
}

.goods-info .info .price{
  color:red;
  position: absolute;
  right:0;
  top:70rpx;
  font-size:18px;
}

.give{
  background: #F8F8F8;
  padding:10px;
  position: relative;
}

.btns{
  position: relative;
  height:48px;
}

.btns text{
  display: block;
  background: #FFF;
  border:1px solid #ccc;
  width:48px;
  height:48px;
  border-radius: 50%;
  color:#F88E2D;
  line-height:48px;
  text-align: center;
  float: left;
  font-size:14px;
}

.btns text:nth-of-type(2){
  float:right;
  color:#1B9E32;
}

.btns image.avatar{
  width:48px;
  height:48px;
  border-radius: 50%;
  position: absolute;
  top:0;
  left:50%;
  margin-left:-24px;
}

.btns .pic{
  width: 100rpx;
  height:70px;
  position: absolute;
  top:-10px;
}

.btns .pic:nth-of-type(3){
  right:118rpx;
}

.btns .pic:nth-of-type(1){
  width:80rpx;
  left:125rpx;
}

.nickname,.pay-date{
  color:#868686;
  font-size: 14px;
  display: block;
  text-align: center;
  margin:5px 0;
}

.now-give{
  width:300rpx;
  font-size:14px;
  color:#FFF;
  background: #FA8E2C;
}

.now-give.button-hover{
  background:#FF6C39;
}

.appeal{
  font-size:16px;
  color:#AAAAAA;
  position: absolute;
  right:10px;
  bottom:18px;
}