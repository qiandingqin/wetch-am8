/* views/my/my.wxss */
@import '../../utils/css/style';

.userinfo{
  display: flex;
  padding-top:10px;
}

.userinfo > view{
  flex: 1;
  text-align: center;
}

.userinfo > view image{
  width:64px;
  height: 64px;
  border-radius: 50%;
  border:1px solid #ccc;
}

.userinfo > view:nth-of-type(1),.userinfo > view:nth-of-type(3){
  padding-top:10px;
}

.userinfo > view text:nth-of-type(2){
  display: block;
  font-size:12px;
  color:#B3B3B3;
  margin-top:5px;
}

.list-group{
  margin-top:20px;
  border-top:1px solid #F1F1F1;
}

.list-item{
  padding:15px;
  border-bottom: 1px solid #F1F1F1;
}

.list-item > image{
  width:28px;
  height:28px;
  vertical-align: middle;
  margin-right:15px;
}

.list-item > text{
  position: relative;
  top:2px;
  color:#212121;
}