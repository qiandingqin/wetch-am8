/* views/index/index.wxss */
@import '/utils/css/style.wxss';
page{
  width:100%;
  background: #EEEEEE;
  overflow-x: hidden;
}

.top{
  width:100%;
  overflow: hidden;
  position: relative;
}

.top .position,.myIcon{
  position: absolute;
  left:0;top:0;
  z-index:1;
}

.top .position {
  width:100%;
}

.top .position > view.localtion{
  width:calc(85% - 15px);
  float: left;
  padding-left:15px;
}

view.localtion image{
  margin-right:5px;
  position: relative;
  top:5px;
}

view.localtion text{
  font-size:16px;
  color:#FFF;
}

.top .position > .myBtn{
  width:15%;
  float: left;
  text-align: center;
}

.top .position > .myBtn image{
  position: relative;
  top:5px;
}

.take{
  width:100px;
  padding:5px 0;
  background: #FFDA44;
  position: absolute;
  right:-40px;
  top:80px;
  z-index:1;
  color:#000;
  font-size:12px;
  border-radius: 15px;
  text-indent: 1em;
}

.banner , .banner swiper-item{
  width:100%;
}

.w-nowBuy{
  background: #FFF;
  height:50px;
  font-size:13px;
  padding:0 15px;
}

.w-nowBuy image{
  width:34px;
  height: 34px;
  vertical-align: middle;
  position: relative;
  top:8px;
  border-radius: 50%;
  float:left;
}

.w-nowBuy text{
  width: 600rpx;
  position: relative;
  top:17px;
  left:10px;
  display: block;
  float:left;
}

/*商品列表*/
.goods-list{
  background:#FFF;
  margin:15px 0 46px;
}

.goods-item{
  overflow:hidden;
  padding:20px 15px;
  border-bottom:1px solid #F5F5F5;
}

.goods-item > image{
  display: block;
  float:left;
  width:220rpx;
  height:220rpx;
  border-radius: 10px;
}

.goods-info{
  width:440rpx;
  float:right;
}

text.title-group{
  font-size:28rpx;
  font-weight: bold;
  position: relative;
  top:-7px;
}

text.title-group .stock{
  float:right;
  margin-top:-1px;
  font-size:26rpx;
  font-weight: 500;
}

text.title-group .stock text{
  color:red;
  font-weight: bold;
}

.contents{
  height:108rpx;
}

.contents .content{
  width:50%;
  display: inline-block;
  font-size:28rpx;
  color:#949494;
}

.goods-info-bottom{
  overflow: hidden;
}

.price-text{
  float:left;
  position: relative;
  top:5px;
}

.price-text text{
  color:red;
}

.number{
  float:right;
  position: relative;
  top:4px;
}

.number button{
  width:26px;
  height:26px;
  padding:0;
  border-radius: 50%;
  text-align: center;
  font-size:20px;
  line-height:26px;
  color:#B5B5B5;
  background: #EEE;
  border:none;
}

.button-hover{
  background-color:#CCC !important;
}

.number text{
  font-size:16px;
  position: relative;
  top:-6px;
  margin:0 10px;
  color:#B4B4B4;
}

.amount-group{
  width:100%;
  height:46px;
  background: #FFF;
  position: fixed;
  left:0;
  bottom:0;
  opacity: 0;
}

.amount-group>text{
  line-height:46px;
  padding-left:15px;
}

.amount-group>text text{
  color:red;
}

.amount-group>text text:nth-of-type(1){
  font-size:30rpx;
}

.amount-group button{
  width:250rpx;
  height:100%;
  float:right;
  background:#F98E2C;
  border:none;
  border-radius: 0;
  color:#FFF;
  font-size:36rpx;
  padding:0;
  line-height: 46px;
  text-align: center;
}
